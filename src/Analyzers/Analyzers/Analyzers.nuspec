    <id>Analyzers</id>
    <version>0.3.0.0</version>
    <title>MVC Analyzers</title>
    <authors>Justin Self,Simon Timms</authors>
    <owners>Justin Self,Simon Timms</owners>
    <licenseUrl>https://github.com/ClearMeasureLabs/Analyzers/blob/master/LICENSE</licenseUrl>
